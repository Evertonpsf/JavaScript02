const leia = require('readline-sync');

let n1,n2,n3,n4,diferenca

n1 = leia.questionFloat("Informe um numero: ");
n2 = leia.questionFloat("Informe um numero: ");
n3 = leia.questionFloat("Informe um numero: ");
n4 = leia.questionFloat("Informe um numero: ");
diferenca = (n1 * n2) - (n3 * n4);
console.log("A diferença entre os valores são: " + diferenca.toFixed(2));

